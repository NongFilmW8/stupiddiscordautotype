while True:
    random_message = random.choice(messages)
    if random_message not in sent_messages:
        keyboard.write(random_message + '\n')
        sent_messages.add(random_message)
    time.sleep(10)
    if len(sent_messages) == len(messages):
        sent_messages.clear()

